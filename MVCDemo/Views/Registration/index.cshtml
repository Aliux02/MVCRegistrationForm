@model Registration

@using (Html.BeginForm("PostRegistrationData", "Registration", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.Age)
    @Html.TextBoxFor(m => m.Age, new { @class = "form-control w-25" })
    @Html.ValidationMessageFor(m => m.Age,"", new { @style = "color:red"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control w-25" })
    @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color:red"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Surname)
    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control w-25" })
    @Html.ValidationMessageFor(m => m.Surname, "", new { @style = "color:red"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Address)
    @Html.TextBoxFor(m => m.Address, new { @class = "form-control w-25" })
    @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:red"})
</div>
    

    <input type="submit" value="submit" class="btn btn-primary">
}